<h1>Listing contact_details</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contact_details.each do |contact_detail| %>
  <tr>
    <td><%= contact_detail.name %></td>
    <td><%= contact_detail.category %></td>
    <td><%= contact_detail.value %></td>
    <td><%= link_to 'Show', [:profile, contact_detail] %></td>
    <td>
      <% if permitted_to? :edit, contact_detail %>
        <%= link_to 'Edit', edit_profile_contact_detail_path(contact_detail) %>
      <% end %>
    </td>
    <td>
      <% if permitted_to? :destroy, contact_detail %>
        <%= link_to 'Destroy', [:profile, contact_detail], :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<% if permitted_to? :new, :contact_details %>
  <%= link_to 'New Contact detail', new_profile_contact_detail_path %>
<% end %>
