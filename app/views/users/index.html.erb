<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= "âœ“" if user.role_symbols.include?(:admin) %></td>
    <td>
      <% if permitted_to? :show, user %>
        <%= link_to 'Show', user %>
      <% end %>
    </td>
    <td>
      <% if permitted_to? :edit, user %>
        <%= link_to 'Edit', edit_user_path(user) %>
      <% end %>
    </td>
    <td>
      <% if permitted_to? :destroy, user %>
        <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<% if permitted_to? :new, :users %>
  <%= link_to 'New User', new_user_path %>
<% end %>
