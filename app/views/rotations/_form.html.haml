= form_for(@rotation) do |f|
  - if @rotation.errors.any?
    #error_explanation
      %h2
        = pluralize(@rotation.errors.count, "error")
        prohibited this rotation from being saved:
      %ul
        - @rotation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
