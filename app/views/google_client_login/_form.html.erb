<h2>Enter your credentials</h2>
<strong>Only the acquired ClientLogin token, not your password, will be saved on the server.</strong>

<%= form_tag do %>
  <table>
    <tr>
      <td><%= label_tag(:email, "Email:") %></td>
      <td><%= text_field_tag(:email) %></td>
    </tr>
    <tr>
      <td><%= label_tag(:password, "Password:") %></td>
      <td><%= password_field_tag(:password) %></td>
    </tr>
    <tr>
      <td><%= submit_tag %></td>
    </tr>
  </table>
<% end %>
